{
  "name": "@36node/shanghaibus-messenger",
  "version": "0.5.5",
  "description": "A module boilerplate for nodejs and web.",
  "repository": {
    "url": "36node/shanghaibus-messenger",
    "type": "git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "dist",
    "typings"
  ],
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "scripts": {
    "preinstall": "bin/preinstall.sh",
    "start:client": "babel-node bin/client.js",
    "kafka-push": "babel-node bin/kafka-push.js",
    "build": "microbundle build",
    "format": "prettier --trailing-comma es5 --write 'src/**/*.js'",
    "lint": "eslint src",
    "release": "standard-version && git push --follow-tags origin master",
    "test": "jest --silent",
    "jest": "jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "typings": "typings/index.d.ts",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "ajv": "^6.5.4",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "node-rdkafka": "^2.4.2"
  },
  "devDependencies": {
    "@36node/babel": "^0.2.2",
    "@36node/eslint-config": "^0.3.4",
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "@types/lodash": "^4.14.116",
    "husky": "^1.0.0-rc.13",
    "jest": "20.0.4",
    "line-by-line": "^0.1.6",
    "lint-staged": "^7.2.0",
    "microbundle": "^0.6.0",
    "prettier": "^1.13.7",
    "standard-version": "^4.4.0"
  },
  "gitHead": "49f89ff78d144be08607e43fbe8aa9e01f16e89d"
}
